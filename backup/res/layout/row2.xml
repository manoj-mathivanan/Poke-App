<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/r2layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lightgrey_gradient"
    android:padding="3dp" >

    <TextView
        android:id="@+id/r2name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="3dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/r2poke"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/r2name"
        android:layout_toRightOf="@+id/r2pokestatus"
        android:src="@drawable/pokeimg2" />

    <TextView
        android:id="@+id/r2punchstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r2name"
        android:layout_toRightOf="@+id/r2poke"
        android:paddingBottom="5dp"
        android:paddingLeft="9dp"
        android:text="+"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/r2punch"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/r2name"
        android:layout_toRightOf="@+id/r2punchstatus"
        android:src="@drawable/punchimg2" />

    <TextView
        android:id="@+id/r2hugstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/r2punch"
        android:layout_toRightOf="@+id/r2punch"
        android:paddingBottom="5dp"
        android:paddingLeft="9dp"
        android:text="+"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/r2hug"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/r2name"
        android:layout_toRightOf="@+id/r2hugstatus"
        android:src="@drawable/hugimg2" />

    <TextView
        android:id="@+id/r2kissstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/r2hug"
        android:layout_toRightOf="@+id/r2hug"
        android:paddingBottom="5dp"
        android:paddingLeft="9dp"
        android:text="+"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/r2pokestatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r2name"
        android:layout_toRightOf="@+id/textView2"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:text="+"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/r2pokestatus"
        android:layout_alignBottom="@+id/r2pokestatus"
        android:layout_alignLeft="@+id/r2name"
        android:paddingBottom="5dp"
        android:paddingLeft="7dp"
        android:text="You have received: "
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/r2kiss"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/r2name"
        android:layout_toRightOf="@+id/r2kissstatus"
        android:src="@drawable/kissimg2" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/r2kiss"
        android:layout_toRightOf="@+id/r2kiss"
        android:paddingBottom="5dp"
        android:paddingLeft="9dp"
        android:text="+"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/ImageView04"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/TextView04"
        android:layout_toRightOf="@+id/TextView04"
        android:src="@drawable/punchimg2" />

</RelativeLayout>